
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2 id="form-theme"><small>Common Settings</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" style="display:block">
                <br>
                <form id="add-news-form" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="note">
                            Note <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea id="note"
                                      required="required"
                                      class="form-control"
                                      name="note"
                                      data-parsley-trigger="keyup"
                                      data-parsley-minlength="10"
                                      data-parsley-maxlength="700"
                                      data-parsley-minlength-message="You need to enter at least a 10 caracters. This is help to you identify this news."></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="imgLink">
                            Image Link <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="imgLink" name="imgLink" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dateForShowing">
                            Date For Showing <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="datetime-local" id="dateForShowing" placeholder="e.g. 2018-12-12T22:00" name="dateForShowing" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="ln_solid"></div>

                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button id="cancel-btn" disabled="disabled" class="btn btn-primary" type="button">Cancel</button>
                            <button id="save-btn" disabled="disabled" class="btn btn-success" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>