@{
    Layout = null;
}
@using Microsoft.Extensions.Localization
@using TopCrypto.Controllers.Brokers
@inject IStringLocalizer<BrokersController> _localizer

<script type="text/html" id="broker-row-item-template">
    <div class="broker broker2">
        <div class="broker-logo"><img data-bind="attr:{src: imagePath}" src="assets/img/brockers/beHappy.png" alt=""></div>
        <h3 data-bind="text:name"></h3>
        <div data-bind="foreach: new Array(mark>5?5:!mark||mark<0?0:mark)">
            <span><img src="assets/img/star.png" alt=""></span>
        </div>
        <p class="description" data-bind="text:description"></p>
        <div class="pre-review">
            <div class="review active review2"><a data-bind="attr:{href: '/broker/' + origname}">@Html.Raw(_localizer["top_index_review_broker"].Value)</a></div>
        </div>
    </div>
</script>

<div class="container stn-brokers">
    <h2>@Html.Raw(_localizer["top_index_title"].Value) <span style="color: #f70600">2018</span></h2>
    <!--ko foreach:brokers-->
    <!--ko if:$index()%3==0-->
    <div class="row">
        <div class="text-center col-12 col-lg-4 col" data-bind="template: { name: 'broker-row-item-template', data : $root.brokers[$index()] }"></div>
        <div class="text-center col-12 col-lg-4 col" data-bind="template: { name: 'broker-row-item-template', data : $root.brokers[$index()+1], if: $index()+1<$root.brokers.length}"></div>
        <div class="text-center col-12 col-lg-4 col" data-bind="template: { name: 'broker-row-item-template', data : $root.brokers[$index()+2], if: $index()+2<$root.brokers.length}"></div>
    </div>
    <!--/ko-->
    <!--/ko-->

    <div class="row">
        <div class="text-center col-12 col-lg-12 line hide-mobile">
            <div class="all-brokers ">
                <div><a href="/brokers">@Html.Raw(_localizer["top_index_all_brokers"].Value) <span>►</span></a></div>
            </div>
        </div>
    </div>
</div>
